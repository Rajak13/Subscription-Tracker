{
  "name": "subscription-tracker",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "dev:both": "concurrently \"npm run dev\" \"npm run frontend\"",
    "install:all": "npm install && npm run frontend:install"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^2.6.9",
    "dotenv": "^17.2.1",
    "express": "^4.16.1",
    "http-errors": "^1.6.3",
    "jade": "^1.11.0",
    "js": "^0.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.5",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "concurrently": "^7.6.0"
  }
}
